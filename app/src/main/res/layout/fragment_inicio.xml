<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.fragment_bottom_navegation.InicioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/mapa" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/bt_hoteles"
                        style="@style/botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_inicio"
                        android:drawableTop="@drawable/ic_local_hotel_black_24dp"
                        android:text="@string/hoteles">

                    </Button>

                    <Button
                        android:id="@+id/bt_restaurante"
                        style="@style/botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_inicio"
                        android:drawableTop="@drawable/ic_restaurant_black_24dp"
                        android:text="@string/restaurante">

                    </Button>

                    <Button
                        android:id="@+id/bt_cajeros"
                        style="@style/botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_inicio"
                        android:drawableTop="@drawable/ic_cajero"
                        android:text="@string/cajeros">

                    </Button>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3">

                    <Button
                        android:id="@+id/bt_lugares"
                        style="@style/botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_inicio"
                        android:drawableTop="@drawable/ic_place"
                        android:text="@string/lugares">

                    </Button>

                    <Button
                        android:id="@+id/bt_tiendas"
                        style="@style/botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_inicio"
                        android:drawableTop="@drawable/ic_store"
                        android:text="@string/tiendas">

                    </Button>

                    <Button
                        android:id="@+id/bt_bares"
                        style="@style/botton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bt_inicio"
                        android:drawableTop="@drawable/ic_bar"
                        android:text="@string/bares">

                    </Button>
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/tv_recomendado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Recomendados"
                android:textColor="#000000"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>